@model asp_test.Models.RegisterCommentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Userid" class="control-label"></label>
                <select name="Userid">
                    @foreach(var val in Model?.Userlist!)
                    {   
                        if (val.Selected)
                        {
                            <option selected="selected" value=@val.Value>@val.Text</option>
                        }
                        else
                        {
                            <option value="@val.Value">@val.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="Userid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment1" class="control-label"></label>
                <input asp-for="Comment1" class="form-control" value="@Model.Comment1" />
                <span asp-validation-for="Comment1" class="text-danger"></span>
            </div>
            <input type="hidden" name="Movieid" value="@Model?.Movieid" />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-movieid="@Model?.Movieid">Back to List</a>
</div>